@model IEnumerable<Product>

<div class="container">
    @await Component.InvokeAsync("Label", new { Label = "Товары магазина" })
    <div class="row justify-content-start ml-auto mr-auto">
        @foreach (var pr in Model)
        {
            <div class="col-12 col-md-6">
                <div class="p-3 m-2 mb-4 light-gray-bg rounded black-border">
                    <div>
                        <p class="h4 text-left">
                            <span>@pr.Name</span>
                            <br />
                            <span class="ml-auto">@pr.Category</span>
                        </p>
                    </div>
                    <div class="row">
                        <div class="col-lg-5 col-sm-12">
                            <span class="h3">@pr.Price&#8381;</span>
                        </div>
                        <div class="col d-flex m-1 justify-content-center justify-content-md-start justify-content-lg-end">
                            <form method="post" class="text-right">
                                <button class="btn btn-success" type="submit" asp-controller="Product" asp-action="AddToCart" asp-route-returnUrl="@Url.Action("Index", "Shop")" asp-route-productID="@pr.ID">Добавить в корзину</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>