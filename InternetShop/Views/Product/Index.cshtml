@model IEnumerable<Product>

<div class="container-fluid">
    @await Component.InvokeAsync("Label", new { label = "Список продуктов" })
    <table class="table table-dark">
        <tr>
            <th>Наименование</th>
            <th>Категория</th>
            <th>Код</th>
            <th>Цена</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr class="text-center">
                <td colspan="4" class="text-uppercase no-items">Товаров не найдено</td>
            </tr>
        }
        else
        {
            @foreach (var pr in Model)
            {
                <tr>
                    <td>@pr.Name</td>
                    <td>@pr.Category</td>
                    <td>@pr.Code</td>
                    <td>@pr.Price</td>
                    <td class="text-right">
                        <form method="post">
                            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@pr.ID">Изменить</a>
                            <button class="btn btn-danger" type="submit" asp-action="Delete" asp-route-id="@pr.ID">Удалить</button>
                            <button class="btn btn-success" type="submit" asp-action="AddToCart" asp-route-productID="@pr.ID">Добавить в корзину</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <a asp-action="Create" class="btn btn-dark">Добавить новый товар</a>
</div>