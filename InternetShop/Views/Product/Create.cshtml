@model Product

<div class="container-fluid">
    @await Component.InvokeAsync("Label", new { label = ViewBag.Action })
    <div class="m-1 p-1">
        <div asp-validation-summary="All" danger-validation="true" numb-col="4"></div>
        <div class="row justify-content-center">
            <div class="col-md-4 col-12">
                <form asp-action="Create" method="post">
                    <input type="hidden" class="form-control" asp-for="ID">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" placeholder="Введите имя">
                    </div>
                    <div class="form-group">
                        <label asp-for="Code"></label>
                        <input class="form-control" asp-for="Code" placeholder="Введите код">
                    </div>
                    <div class="form-group">
                        <label asp-for="Category"></label>
                        <input class="form-control" asp-for="Category" placeholder="Введите категорию">
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price" placeholder="Введите цену">
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</div>