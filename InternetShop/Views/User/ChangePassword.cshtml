@model PasswordChangeViewModel

<div class="container">
    @await Component.InvokeAsync("Label", new { label = "Смена пароля" })
    <div asp-validation-summary="All" danger-validation="true" numb-col="5"></div>
    <div class="row justify-content-center">
        <div class="col-md-7 col-12">
            <form asp-action="ChangePassword" method="post">
                <div class="form-group">
                    <label asp-for="OldPassword">Старый пароль</label>
                    <input class="form-control" type="password" asp-for="OldPassword" placeholder="Введите старый пароль" />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword">Новый пароль</label>
                    <input class="form-control" type="password" asp-for="NewPassword" placeholder="Введите новый пароль" />
                </div>
                <div class="form-group">
                    <label asp-for="RepeatNewPassword">Повтор нового пароля</label>
                    <input class="form-control" type="password" asp-for="RepeatNewPassword" placeholder="Повторите новый пароль" />
                </div>
                <div class="row">
                    <div class="col-12 col-md-4 text-md-left text-center m-1">
                        <button type="submit" class="btn btn-danger">Сменить пароль</button>
                    </div>
                    <div class="col-12 col-md text-md-right text-center m-1">
                        <a asp-action="Index" asp-controller="PersonalAccount" class="btn btn-primary">Вернуться в личный кабинет</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>