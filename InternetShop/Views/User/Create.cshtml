@model UserInfoViewModel

<div class="container-fluid">
    @await Component.InvokeAsync("Label",  new { label = ViewBag.Action })
    <div class="m-1 p-1">
        <div asp-validation-summary="All" danger-validation="true" numb-col="4"></div>
        <div class="row justify-content-center">
            <div class="col-4">
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="Customer.ID" />
                    <div class="form-group">
                        <label asp-for="Customer.Name"></label>
                        <input class="form-control" asp-for="Customer.Name" placeholder="Введите имя">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" placeholder="Введите почтовый адрес">
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Code"></label>
                        <input class="form-control" asp-for="Customer.Code" placeholder="Введите код">
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Address"></label>
                        <input class="form-control" asp-for="Customer.Address" placeholder="Введите адрес">
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Discount"></label>
                        <input class="form-control" asp-for="Customer.Discount" placeholder="Введите изначальную скидку">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" placeholder="Введите пароль">
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</div>