<div class="container">
    @await Component.InvokeAsync("Label", new { label = "Меню" })
    <div class="row justify-content-center">
        <div class="col-10 col-md-4 rounded text-center p-3 bg-secondary menu-block">
            <div class="m-1">
                <a asp-action="Index" asp-controller="Order" class="btn btn-primary">Список заказов</a>
            </div>
            <div class="m-1">
                <a asp-action="ChangePassword" asp-controller="User" class="btn btn-primary">Сменить пароль</a>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="m-1">
                    <a asp-action="Index" asp-controller="ManageOrders" class="btn btn-primary">Управление заказами</a>
                </div>
                <div class="m-1">
                    <a asp-action="AllUsers" asp-controller="User" class="btn btn-primary">Управление пользователями</a>
                </div>
                <div class="m-1">
                    <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Управление товарами</a>
                </div>
            }
        </div>
    </div>
</div>